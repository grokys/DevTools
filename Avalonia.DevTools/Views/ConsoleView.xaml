<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <DockPanel>
    <TextBox DockPanel.Dock="Bottom"
             Text="{Binding Input}"
             KeyDown="InputKeyDown"/>
    <ListBox BorderThickness="0"
             Items="{Binding Output}"/>
  </DockPanel>
</UserControl>